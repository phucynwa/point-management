<div class="container">
  <div class="col-md-3">
    <%= gravatar_for @user, size: 240 %>
    <h1><%= @user.name %></h1>
    <ul>
      <li>Student code: <%= @user.code %></li>
      <li>Email: <%= @user.email %></li>
      <li>Birthday: <%= @user.birthday ||= "Not exist" %></li>
    </ul>
  </div>
  <div class="col-md-9">
    <table class="table">
      <thead>
        <tr>
          <th>Course</th>
          <th>Lecture</th>
          <th>Semester</th>
          <th>Mid. Point</th>
          <th>Fin. Point</th>
          <th>Sum. Point</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @learnings.each do |learning| %>
          <%= render "learning", learning: learning %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
