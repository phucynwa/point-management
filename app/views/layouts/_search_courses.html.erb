<fieldset>
  <legend>
    <h3>
      <span class="glyphicon glyphicon-blackboard" aria-hidden="true"></span>
      Search a course
    </h3>
  </legend>
  <%= form_tag courses_path, remote: true, method: :get do %>
    <div class="input-group">
      <input type="text" name="keyword" class="form-control" value="<%= @keyword %>" placeholder="Search by course, lecture or teacher...">
      <span class="input-group-btn">
        <button class="btn btn-primary" type="submit">
          <span class="glyphicon glyphicon-search"></span>&nbsp;
          Search
        </button>
      </span>
    </div>
  <% end %>
</fieldset>
<hr>
<div id="search-courses-result"></div>
