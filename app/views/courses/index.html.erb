<div class="container">
  <div class="col-md-3">
    <%= render "shared/brand" %>
    <% if current_user.teacher? %>
      <p class="text-center">
        <%= link_to "Add a course", new_course_path, class: "btn btn-primary" %>
      </p>
    <% end %>
  </div>
  <div class="col-md-9">
    <h3>All Course</h3>
    <%= render "courses", courses: @courses %>
    <%= paginate @courses, theme: "twitter-bootstrap-3" %>
  </div>
</div>
